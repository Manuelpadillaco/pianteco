{
  "flex-layout.col#CategorySlide": {
    "props": {
      "blockClass": ["CategorySlide"]
    },
    "children": ["slider-layout#CategorySlide"]
  },

  // * Category Slider Container
  "slider-layout#CategorySlide": {
    "props": {
      "blockClass": ["CategorySlide__Container"],
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 2
      },
      "infinite": true,
      "showPaginationDots": "never"
    },
    "children": [
      "info-card#CategorySlide-item-1",
      "info-card#CategorySlide-item-2",
      "info-card#CategorySlide-item-3",
      "info-card#CategorySlide-item-4",
      "info-card#CategorySlide-item-5"
    ]
  },

  // * Category Slide Item 1
  "info-card#CategorySlide-item-1": {
    "props": {
      "blockClass": [
        "CategorySlide__Item",
        "CategorySlide__Item--1"
      ],
      "id": "CategorySlide-item-1",
      "isFullModeStyle": false,
      "textPosition": "left",
      "imageUrl": "https://pianteco.vtexassets.com/arquivos/orquideas-desk-piante.png",
      "callToActionText": "Cuidado de los pisos",
      "callToActionUrl": "#"
