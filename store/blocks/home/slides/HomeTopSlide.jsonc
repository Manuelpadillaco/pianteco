{
  "flex-layout.col#TopSlide": {
    "props": {
      "blockClass": ["TopSlide"]
    },
    "children": ["slider-layout#TopSlide", "slider-layout#TopSlide-M"]
  },

  // * Slider Container
  "slider-layout#TopSlide": {
    "props": {
      "blockClass": ["TopSlide__Container", "Desktop-Banner"],
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "infinite": true
    },
    "children": [
      "image#TopSlide-Desk-item-1",
      "image#TopSlide-Desk-item-2",
      "image#TopSlide-Desk-item-3"
    ]
  },
  "slider-layout#TopSlide-M": {
    "props": {
      "blockClass": ["TopSlide__Container", "Mobile-Banner"],
      "itemsPerPage": {
        "desktop": 1,
        "tablet": 1,
        "phone": 1
      },
      "infinite": true
    },
    "children": [
      "image#TopSlide-Mobile-item-1"
    ]
  },


  // * Slide Item 1
  "info-card#TopSlide-item-1": {
    "props": {
      "blockClass": [
        "TopSlide__Item",
        "TopSlide__Item--1"
      ],
      "id": "TopSlide-item-1",
      "isFullModeStyle": true,
      "textPosition": "left",
      "imageUrl": "https://pianteco.vtexassets.com/arquivos/orquideas-desk-piante.png",
      "mobileImageUrl": "https://pianteco.vtexassets.com/arquivos/banner-mobile-v1-piante.png",
      "headline": "Nuevo producto",
      "subhead": "Suavidad y fragancia",
      "callToActionText": "Comprar Ya", 
      "callToActionUrl": "#",
      "textAlignment": "center"
    }
  },

  // * Slide Item 2
